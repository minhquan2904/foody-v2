<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:padding="8dp">
    <ImageView
        android:id="@+id/listView_filter_item_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_filter_latest"
        android:tint="@color/colorBackgroundDarkerr"
        android:contentDescription="@string/tmpdescrition" />

    <TextView
        android:id="@+id/listView_filter_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="Mới nhất"
        android:textAllCaps="false"
        android:textSize="@dimen/text_normal" />

    <TextView
        android:id="@+id/listView_filter_item_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_text_listview_item_tag"
        android:text="New"
        android:shadowColor="@color/textColorMain"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"/>
</LinearLayout>