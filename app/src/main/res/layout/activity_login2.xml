<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/intro"
    tools:context="com.example.minhquan.foodyv1.View.LoginActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tb_login_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height_default"
        app:theme="@style/ToolbarColoredBackArrow"
        app:title="Đăng nhập bằng Email"
        app:titleTextColor="@color/colorWhite"       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/str_login_foody"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_marginTop="10dp"       />
        </LinearLayout>
        </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#3c5a99">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/com_facebook_button_icon_blue"/>
            <View
                android:layout_margin="3dp"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#ddd"/>
            <TextView
                android:layout_margin="3dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Facebook"
                android:layout_marginRight="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="#ff0004">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_google" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="Google"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#73109f">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_share_yahoo"/>
            <View
                android:layout_margin="3dp"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/colorWhite"/>
            <TextView
                android:layout_margin="3dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Yahoo"
                android:layout_marginRight="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="#2fa7de">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_share_twitter"/>
            <View
                android:layout_margin="3dp"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/colorWhite"/>
            <TextView
                android:layout_margin="3dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Twitter"
                android:layout_marginRight="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btn_dangnhapbangsdt"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:background="#30faf3f3"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:text="Đăng nhập với số điện thoại"/>
        <View
            android:layout_width="315dp"
            android:layout_height="1dp"
            android:background="@color/colorWhite"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <View
            android:layout_width="315dp"
            android:layout_height="1dp"
            android:background="@color/colorWhite"/>
        <Button
            android:id="@+id/btn_dangnhapbangemail"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:background="#30faf3f3"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:text="Đăng nhập với Email"/>
    </LinearLayout>



</LinearLayout>
