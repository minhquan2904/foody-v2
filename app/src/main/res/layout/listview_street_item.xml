<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_button_listviewdistrict_showstreet">
    <TextView
        android:id="@+id/item_text_streetname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_text_listviewstreet_item"
        android:gravity="center_vertical"
        android:text="Cách mạng tháng 8"
        android:textSize="@dimen/text_normal" />
    <TextView
        android:id="@+id/item_text_streetid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>